{
    "manifest_version": 3,
    "name": "Stop Distraction",
    "version": "2.1",
    "description": "Advanced focus tool to track, limit, and control your Instagram Reels and YouTube Shorts usage.",
    "permissions": [
        "storage",
        "notifications"
    ],
    "host_permissions": [
        "*://*.instagram.com/*",
        "*://*.youtube.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Stop Distraction Dashboard",
        "default_icon": {
            "128": "icon.png"
        }
    },
    "icons": {
        "128": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.instagram.com/*",
                "*://*.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ],
            "run_at": "document_end"
        }
    ]
}